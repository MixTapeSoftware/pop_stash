#!/bin/bash

# Check if project name is provided
if [ -z "$1" ]; then
  echo "Error: Project name is required"
  echo "Usage: bin/init <project_name> [project_description]"
  exit 1
fi

PROJECT_NAME="$1"
PROJECT_DESCRIPTION="${2:-}"


echo "Initializing Porject $PROJECT_NAME" "$PROJECT_DESCRIPTION"
docker compose run app mix pop_stash.project.new  "$PROJECT_NAME" --description "$PROJECT_DESCRIPTION"
